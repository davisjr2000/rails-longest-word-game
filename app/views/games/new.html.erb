<h3> Current Score: <%= session[:score].round(2) %></h3>
<%= link_to :root do %> <div class="btn btn-lg btn-danger">Quit</div> <% end %>
<div class="container">
<h1>HERE ARE YOUR LETTERS:</h1>
<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-letters">
      <%= letter %>
    </li>
  <% end %>
</ul>
<form action="/score" method="post">
  <input type="text" name="attempt" class="form-control" placeholder="Enter your best shot!" autofocus>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
  <br>
  <input class="btn btn-success btn-lg" type="submit" value="Submit!">
</form>
</div>
